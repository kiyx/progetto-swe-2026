@startuml ComponentDiagram_BugBoard26_Modern
!theme plain
skinparam backgroundColor white
skinparam shadowing false
skinparam linetype polyline
skinparam defaultFontName "Segoe UI"
skinparam defaultFontSize 13
skinparam roundcorner 20

skinparam nodesep 140
skinparam ranksep 90

!include <tupadr3/devicons2/java>
!include <tupadr3/devicons2/spring>
!include <tupadr3/devicons2/postgresql>
!include <tupadr3/devicons2/docker>
!include <tupadr3/material/cloud>

left to right direction
title **Architettura BugBoard26** - Component Diagram

skinparam arrow {
    Color #555555
    Thickness 1.5
    FontColor #444444
    FontStyle italic
}

skinparam interface {
    BackgroundColor #FFFFFF
    BorderColor #555555
    BorderThickness 1.5
}

skinparam node {
    BackgroundColor #FAFAFA
    BorderColor #DDDDDD
    FontColor #666666
    FontStyle bold
    BorderThickness 1.5
}

skinparam database {
    BackgroundColor #FFF8E1
    BorderColor #FFA000
    FontColor #E65100
}

skinparam note {
    BackgroundColor #F0F0F0
    BorderColor #CCCCCC
    FontColor #666666
    FontSize 10
}

skinparam component {
    BackgroundColor<<Frontend>> #F5F9FF
    BorderColor<<Frontend>> #2979FF
    FontColor<<Frontend>> #1565C0
    BorderThickness 1.5
    
    BackgroundColor<<Backend>> #F1F8E9
    BorderColor<<Backend>> #43A047
    FontColor<<Backend>> #2E7D32
    BorderThickness 1.5
}

node "Client Workstation" as client {
    component "<$java>\nBugBoard Client\n(JavaFX)" as frontend <<Frontend>>
    
    note bottom of frontend
        **Pattern:** MVVM
    end note
}

node "Server Host (Docker Container)" as serverNode {
    component "<$spring>\nBugBoard Backend\n(Spring Boot)" as backend <<Backend>>
    note top of backend
        **Pattern:** Layered (BCE)
    end note
    
    interface "Port 8080\n(REST API)" as api
}

cloud "<$cloud>\nNeon (Cloud)" as cloud {
    database "<$postgresql>\nPostgreSQL" as db
}

backend -right- api
frontend .right.> api : "**HTTP / JSON**"
note on link
  REST API v1
end note

backend ---> db : "**JDBC / TCP**"
note on link
  Read/Write
end note

@enduml